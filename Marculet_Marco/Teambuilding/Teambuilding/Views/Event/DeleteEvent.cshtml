@model Teambuilding.Models.Event

@{
    ViewData["Title"] = "Delete The Event";
}
<body>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1>Delete The Event?</h1>

            <div>
                
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        ID:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.id)
                    </dd>
                    <dt class="col-sm-2">
                        Date: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.date)
                    </dd>
                    <dt class="col-sm-2">
                        Test: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.text)
                    </dd>
                </dl>
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <form asp-action="DeleteEvent">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                        </form>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
        </div>

        <div class="col-2"></div>
    </div>
</body>